            <a href="/mercurio">Mercurio</a>
            <a href="/venus">Venus</a>
            <a href="/tierra">Tierra</a>
            <a href="/jupiter">Júpiter</a>
            <a href="/saturno">Saturno</a>
            <a href="/urano">Urano</a>
            <a href="/neptuno">Neptuno</a>
        </div>
    </div>

</body>
</html>
